{
    "Tests": [
        {
            "id": "pingGoogle",
            "type": "HttpPing",
            "options": {
                "url": "google.com"
            }
        }
    ],
    "Runners": [
        {
            "id": "pingRunner",
            "type": "TimedIntervalRunner",
            "runs": "pingGoogle",
            "options": {
                "interval": 3000
            }
        }
    ],
    "Loggers": [
        {
            "type": "MongoLogger",
            "options": {
                "listensTo": [
                    "pingGoogle"
                ],
                "host": "mongodb://192.168.13.37:27017",
                "database": "goNetMon",
                "collection": "testResults",
                "user": "goNetMonUser",
                "password": "goNetMon"
            }
        }
    ]
}
